            <directory>./tests/Laravel5.0</directory>
        </testsuite>
        <testsuite name="Laravel5.1">
            <directory>./tests/Laravel5.1</directory>
        </testsuite>
        <testsuite name="Laravel5.2">
            <directory>./tests/Laravel5.2</directory>
        </testsuite>
        <testsuite name="Laravel5.3">
            <directory>./tests/Laravel5.3</directory>
        </testsuite>
    </testsuites>
